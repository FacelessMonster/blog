<div class="container">
<h3><%=t('articles.create')%></h3>

<%= form_for :article, url: '/articles' do |f|%>
<p>
  <%= f.label :title%><br/>
  <%= f.text_field :title, :class => "form-control"%>
</p>
<p>
 <label for="article_content">Article</label><br/>
  <%= f.text_area :content, :class => "form-control"%>
</p>
<p>
  <%= f.submit%>
</p>
<%end%>
</div>